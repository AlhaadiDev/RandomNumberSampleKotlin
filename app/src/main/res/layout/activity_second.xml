<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondActivity">


    <TextView
            android:text="@string/header_random"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:id="@+id/textView_label"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="24sp"/>
    <TextView
            android:text="R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_random"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/textView_label"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:textSize="30sp"/>
</android.support.constraint.ConstraintLayout>